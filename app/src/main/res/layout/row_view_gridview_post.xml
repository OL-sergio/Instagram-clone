<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <udemy.java.instagram_clone.helper.SquareImageView
        android:id="@+id/imageView_rowView_gridPosts"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/avatar" />

    <ProgressBar
        android:id="@+id/progressBar_rowView_gridPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_rowView_gridPosts"
        app:layout_constraintEnd_toEndOf="@+id/imageView_rowView_gridPosts"
        app:layout_constraintStart_toStartOf="@+id/imageView_rowView_gridPosts"
        app:layout_constraintTop_toTopOf="@+id/imageView_rowView_gridPosts" />

</androidx.constraintlayout.widget.ConstraintLayout>